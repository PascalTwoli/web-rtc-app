{
  "name": "peers-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "dev:server": "npm run dev -w @peers/server",
    "dev:client": "npm run dev -w @peers/client",
    "build": "npm run build -w @peers/client",
    "start": "npm run start -w @peers/server",
    "prod": "npm run build && USE_HTTP=true npm run start",
    "install:all": "npm install"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
